<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportActivity"
    android:background="@drawable/bg_gradient">

    <include
        android:id="@+id/snow_sport_toolbar"
        layout="@layout/app_bar_layout">

    </include>

    <LinearLayout
        android:id="@+id/imageLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="0"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snow_sport_toolbar"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/snowReportClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#673AB7"
            android:clickable="true"

            android:gravity="center"
            android:orientation="vertical"

            android:focusable="true">

            <ImageView
                android:id="@+id/snowImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/blizzard"
                android:gravity="center"
                android:tint="#FFFFFF"
                android:clickable="true"

                android:focusable="true" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/snowSportsClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#673AB7"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/sportImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"

                android:src="@drawable/skier"
                android:tint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/snpwChatClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#FF5722"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:clickable="true"

            android:focusable="true">

            <ImageView
                android:id="@+id/chatImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/snowboard"
                android:tint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#18DF13"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:clickable="true"

            android:focusable="true">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/sledge"
                android:tint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#3CF1EBF1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:focusable="true">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_chat_black_24dp"
                android:tint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/pistemap_image"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imageLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/pistemap2"/>

    <ScrollView
        android:id="@+id/description_scrollview"
        android:layout_width="409dp"
        android:layout_height="348dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pistemap_image">

        <LinearLayout
            android:id="@+id/sports_description_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#5148E4">

            <LinearLayout
                android:id="@+id/ski_description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                >

                    <ImageView
                        android:id="@+id/snowboarder_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/snowboarder"/>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/ski_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SKI &amp; SNOWBOARDING"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        />

                    <TextView
                        android:id="@+id/ski_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Description of the ski and snowboard facilities aat glencoe mountain
                        the vertical runs and other details like the names of the runs. BlahBlahBlahBlahBlah
                        BlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlah"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sledging_description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FF5722"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/sledger_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/snowboarder"/>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/sledger_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SLEDGING"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            />

                        <TextView
                            android:id="@+id/sledger_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Description of the ski and snowboard facilities aat glencoe mountain
                        the vertical runs and other details like the names of the runs. BlahBlahBlahBlahBlah
                        BlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlah"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hillwalker_description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#18DF13"
                    >

                    <ImageView
                        android:id="@+id/hillwalker_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/snowboarder"/>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/hillwalking_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HILL WALKING"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            />

                        <TextView
                            android:id="@+id/hillwalking_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description of the ski and snowboard facilities aat glencoe mountain
                        the vertical runs and other details like the names of the runs. BlahBlahBlahBlahBlah
                        BlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlah"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>