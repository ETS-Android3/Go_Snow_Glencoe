<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
        android:id="@+id/snow_sport_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <LinearLayout
        android:id="@+id/imageLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="0"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snow_sport_toolbar"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/Ski"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:background="#673AB7"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/skiImage"
                android:layout_width="45dp"
                android:layout_height="41dp"
                android:clickable="true"
                android:src="@drawable/skier"
                app:tint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/skiLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Ski"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="bold" />
        </LinearLayout>


        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/snowboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:background="#673AB7"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/sportImage"
                android:layout_width="45dp"
                android:layout_height="41dp"
                android:clickable="true"

                android:src="@drawable/snowboard"
                app:tint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Snowboard"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/sledging"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:background="#FF5722"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/chatImage"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/sledgeimage"
                app:tint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Sledging"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/hillWalking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:background="#18DF13"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:clickable="true"

            android:focusable="true">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/hillwalking"
                app:tint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Hill Walking"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/lessons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:background="#FF0000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:focusable="true">

            <ImageView

                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/teacher"
                app:tint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Ski School"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/pistemap_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/imageLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/pistemap2"/>

    <ScrollView
        android:id="@+id/description_scrollview"
        android:layout_width="409dp"
        android:layout_height="348dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pistemap_image">

        <LinearLayout
            android:id="@+id/sports_description_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:id="@+id/ski_description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#673AB7"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                >

                    <ImageView
                        android:id="@+id/snowboarder_image"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/snowboarder"
                        app:tint="#64000000" />

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/ski_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SKI &amp; SNOWBOARDING"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        />

                    <TextView
                        android:id="@+id/ski_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Description of the ski and snowboard facilities aat glencoe mountain
                        the vertical runs and other details like the names of the runs. BlahBlahBlahBlahBlah
                        BlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlah"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:id="@+id/sledging_description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FF5722"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/sledger_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SLEDGING"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            />

                        <TextView
                            android:id="@+id/sledger_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Description of the ski and snowboard facilities aat glencoe mountain
                        the vertical runs and other details like the names of the runs. BlahBlahBlahBlahBlah
                        BlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlah"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/sledger_image"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/glencoe_sledge"/>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:id="@+id/hillwalker_description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#18DF13"
                    >

                    <ImageView
                        android:id="@+id/hillwalker_image"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"
                        android:src="@drawable/hillwalkers"/>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/hillwalking_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HILL WALKING"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            />

                        <TextView
                            android:id="@+id/hillwalking_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description of the ski and snowboard facilities aat glencoe mountain
                        the vertical runs and other details like the names of the runs. BlahBlahBlahBlahBlah
                        BlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlah"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:id="@+id/lessons_description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FF0000"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lessons_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LESSONS"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            />

                        <TextView
                            android:id="@+id/lessons_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Description of the ski and snowboard facilities aat glencoe mountain
                        the vertical runs and other details like the names of the runs. BlahBlahBlahBlahBlah
                        BlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlahBlah"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lessons_image"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/getting_lesson"/>

                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/semiTransparentColor">


                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Description"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Price (£)"
                            android:layout_weight="1"
                            />

                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Description"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Price (£)"
                            android:layout_weight="1"
                            />

                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Description"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Price (£)"
                            android:layout_weight="1"
                            />

                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Description"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Price (£)"
                            android:layout_weight="1"
                            />

                    </TableRow>
                </TableLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>